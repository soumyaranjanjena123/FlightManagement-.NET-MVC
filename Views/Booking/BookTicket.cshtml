@model AirlineManagement.Models.BookingViewModel
@using AirlineManagement.Entities

@{
    ViewBag.Title = "Book Ticket";
}

<h2>Book Ticket</h2>

<form asp-action="BookTicket" method="post">
    <div class="form-group">
        <label>Flight Number:</label>
        <input type="text" class="form-control" asp-for="FlightNumber" readonly />
    </div>
    <div class="form-group">
        <label>Departure Location:</label>
        <input type="text" class="form-control" asp-for="DepartureLocation" readonly />
    </div>
    <div class="form-group">
        <label>Arrival Location:</label>
        <input type="text" class="form-control" asp-for="ArrivalLocation" readonly />
    </div>
    <div class="form-group">
        <label>Departure Date:</label>
        <input type="text" class="form-control" asp-for="DepartureDate" readonly />
    </div>
    <div class="form-group">
        <label>Available Seats:</label>
        <input type="text" class="form-control" asp-for="AvailableSeats" readonly />
    </div>

    <input type="hidden" asp-for="FlightNumber" />
    <button type="submit" class="btn btn-primary">Confirm Booking</button>
</form>
